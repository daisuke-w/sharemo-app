<% @prompts_by_category.each do |category, prompts| %>
  <li class="mb-1">
    <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0" data-bs-toggle="collapse" data-bs-target="#prompt-category-<%= category.id %>-collapse" aria-expanded="false">
      <%= category.name %>
    </button>
    <div class="collapse" id="prompt-category-<%= category.id %>-collapse">
      <ul class="btn-toggle-nav list-unstyled small">
        <% prompts.each do |prompt| %>
          <li>
            <%= link_to prompt.title, prompt_path(prompt), class: 'link-body-emphasis text-decoration-none' %>
          </li>
        <% end %>
      </ul>
    </div>
  </li>
<% end %>