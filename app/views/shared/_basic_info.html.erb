<div class="basic-info-section">
  <div class="custom-field">
    <h3>基本情報</h3>
    <% if current_user == @user %>
      <div class="button-group">
        <%= link_to 'Edit', edit_user_path(current_user), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
  <div>
  <strong>NickName:</strong> <%= current_user.nickname %>
  </div>
  <div>
  <strong>Email:</strong> <%= current_user.email %>
  </div>
  <div>
  <strong>Profile:</strong> <%= simple_format(current_user.profile) %>
  </div>
  <div class="content-info container mt-4">
    <div class="row mt-4">
      <div class="col-md-6">
        <h4>Note Information</h4>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Category</th>
              <th>Total</th>
              <th>Public</th>
              <th>Private</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Notes</td>
              <td><%= @note_information[:total] %></td>
              <td><%= @note_information[:public] %></td>
              <td><%= @note_information[:private] %></td>
            </tr>
            <tr>
              <td>Reference Clicks</td>
              <td><%= @note_information[:total_reference_clicks] %></td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-md-6">
        <h4>Prompt Information</h4>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Category</th>
              <th>Total</th>
              <th>Public</th>
              <th>Private</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Prompts</td>
              <td><%= @prompt_information[:total] %></td>
              <td><%= @prompt_information[:public] %></td>
              <td><%= @prompt_information[:private] %></td>
            </tr>
            <tr>
              <td>Reference Clicks</td>
              <td><%= @prompt_information[:total_reference_clicks] %></td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>