<% @notes_by_category.each do |category, notes| %>
  <li class="mb-1">
    <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0" data-bs-toggle="collapse" data-bs-target="#category-<%= category.id %>-collapse" aria-expanded="false">
      <%= category.name %>
    </button>
    <div class="collapse" id="category-<%= category.id %>-collapse">
      <ul class="btn-toggle-nav list-unstyled small">
        <% notes.each do |note| %>
          <li>
            <%= link_to note.title, note_path(note), class: 'link-body-emphasis text-decoration-none' %>
          </li>
        <% end %>
      </ul>
    </div>
  </li>
<% end %>