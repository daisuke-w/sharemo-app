<div class="notes-container">
  <% @objects.each do |object| %>
    <% if object.is_public %>
      <div class="note-box">
        <div class="header">
          <div class="category"><%= object.category[:name] %></div>
          <div class="type" data-obj="<%= object&.is_a?(Note) ? 'Note' : 'Prompt' %>">
            <%= object.is_a?(Note) ? 'Note' : 'Prompt' %>
          </div>
        </div>
        <div class="tags">
          <% 5.times do |j| %>
            <span class="tag">Tag <%= j + 1 %></span>
          <% end %>
        </div>
        <div class="title"><%= object.title %></div>
        <div class="footer">
          <%= link_to "Detail", dynamic_path(object, :show), class: "btn details-button" %>
          <div class="informative">
            <i class="icon-informative"></i>
            <span class="informative-count"><%= rand(1..100) %></span>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>