<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname %>
            <span style="color:#ff8c8c; font-weight:bold;"><i>必須</i></span>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email %>
            <span style="color:#ff8c8c; font-weight:bold;"><i>必須</i></span>
          </div>
          <div class='field-input'>
            <%= f.email_field :email %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password %>
            <i>(英数字6文字以上)</i>
            <span style="color:#ff8c8c; font-weight:bold;"><i>必須</i></span>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation %>
            <span style="color:#ff8c8c; font-weight:bold;"><i>必須</i></span>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :group %>
            <i>変更できないため、間違いがないようにご注意ください。</i>
            <span style="color:#ff8c8c; font-weight:bold;"><i>必須</i></span>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:group_id, Group.all, :id, :name, {}, {class: 'custom-groups'}) %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :profile %>
          </div>
          <div class='field-input'>
            <%= f.text_area :profile %>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Sign up", class: 'btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
